generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "mysql"
}

// User Model
model User {
  id            Int       @id @default(autoincrement())
  username      String    @unique
  email         String?   @unique
  password      String
  name          String?
  phone         String?
  role          String    @default("writer") // admin, editor, writer
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  posts         Post[]
  
  @@map("users")
}

// Category Model
model Category {
  id            Int       @id @default(autoincrement())
  name          String
  slug          String    
  language      String    @default("en") // en, hi
  showInMenu    Boolean   @default(true)
  menuOrder     Int       @default(0)
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  posts         Post[]
  menuItems     Menu[]

  @@unique([slug, language])
  @@map("cms_category")
}

// Post Model
model Post {
  id            Int       @id @default(autoincrement())
  title         String
  slug          String
  content       String    @db.LongText
  excerpt       String?   @db.Text
  status        String    @default("draft") // draft, pending, scheduled, published
  language      String    @default("en")
  featuredImage String?
  
  authorId      Int?
  author        User?     @relation(fields: [authorId], references: [id])
  
  categoryId    Int?
  category      Category? @relation(fields: [categoryId], references: [id])
  
  viewsCount    Int       @default(0)
  publishAt     DateTime?
  
  isFeatured    Boolean   @default(false)
  isSlider      Boolean   @default(false)
  isBreaking    Boolean   @default(false)
  
  metaTitle     String?   @map("seo_title")
  metaDescription String? @db.Text @map("seo_description")
  metaKeywords  String?

  isRecommended Boolean   @default(false)

  videoUrl      String?
  videoFile     String?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@unique([slug, language])
  @@index([status, publishAt])
  @@index([categoryId, status])
  @@index([authorId, status])
  @@map("cms_post")
}

// Page Model
model Page {
  id            Int       @id @default(autoincrement())
  title         String
  slug          String
  language      String    @default("en") // en, hi
  seoTitle      String?   @map("seo_title")
  seoDescription String?  @db.Text @map("seo_description")
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  sections      PageSection[]
  menuItems     Menu[]

  @@unique([slug, language])
  @@map("cms_page")
}

// Page Section Model
model PageSection {
  id            Int       @id @default(autoincrement())
  pageId        Int
  page          Page      @relation(fields: [pageId], references: [id], onDelete: Cascade)
  
  sectionType   String
  data          Json
  order         Int       @default(0)
  isActive      Boolean   @default(true)

  @@map("cms_pagesection")
}

// Menu Model
model Menu {
  id            Int       @id @default(autoincrement())
  title         String
  menuType      String    @default("navbar") // navbar, footer
  language      String    @default("en") // en, hi
  linkType      String    @default("custom") // custom, category, page
  externalUrl   String?
  
  categoryId    Int?
  category      Category? @relation(fields: [categoryId], references: [id])
  
  pageId        Int?
  page          Page?     @relation(fields: [pageId], references: [id])
  
  order         Int       @default(0)
  parentId      Int?
  parent        Menu?     @relation("MenuHierarchy", fields: [parentId], references: [id])
  children      Menu[]    @relation("MenuHierarchy")
  
  isActive      Boolean   @default(true)

  @@map("cms_menu")
}

// Site Settings Model
model SiteSettings {
  id             Int      @id @default(autoincrement())
  siteName       String   @default("Chambal Sandesh")
  siteTagline    String?
  siteLogo       String?
  siteFavicon    String?
  contactEmail   String?
  contactPhone   String?
  contactAddress String?  @db.Text
  facebookUrl    String?
  twitterUrl     String?
  instagramUrl   String?
  youtubeUrl     String?
  linkedinUrl    String?

  defaultSeoTitle       String?
  defaultSeoDescription String? @db.Text
  defaultSeoKeywords    String?

  postsPerPage       Int     @default(20)
  enableComments     Boolean @default(false)
  enableRegistration Boolean @default(false)
  maintenanceMode    Boolean @default(false)
  maintenanceMessage String? @db.Text

  googleAnalyticsId  String?
  facebookPixelId    String?

  @@map("cms_sitesettings")
}
